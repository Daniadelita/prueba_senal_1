<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="76"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/fondo_pantalla_1" />

                <LinearLayout
                    android:id="@+id/archive_results_title_and_date_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="76"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/average_page"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp" >

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAlignBottom="false"
                    android:contentDescription="@string/line_break"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/pagedrop" />

                <TextView
                    android:id="@+id/active_metric_title"
                    style="@style/h1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/active_metrics_mobile"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#555555"
                    android:width="180dp" />

                <TableLayout
                    android:id="@+id/download_archive_panel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/black_alpha"
                    android:paddingRight="10dp" >

                    <TableRow
                        android:id="@+id/TableRow09"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/flecha" />

                        <TextView
                            android:id="@+id/download_label_text_view"
                            style="@style/column_label"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="@string/download"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="18sp"
                            android:width="130dp" />

                        <TextView
                            android:id="@+id/TextView19"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/download_result"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:id="@+id/upload_archive_panel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/black_alpha"
                    android:paddingRight="10dp" >

                    <TableRow
                        android:id="@+id/TableRow07"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp" >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/flecha" />

                        <TextView
                            android:id="@+id/TextView15"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="@string/upload"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="18sp"
                            android:width="130dp" />

                        <TextView
                            android:id="@+id/download_location"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/upload_location"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/upload_result"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:id="@+id/latency_archive_panel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/black_alpha"
                    android:paddingRight="10dp" >

                    <TableRow
                        android:id="@+id/TableRow04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/flecha" />

                        <TextView
                            android:id="@+id/TextView17"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="@string/latency_ms"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="18sp"
                            android:width="130dp" />

                        <TextView
                            android:id="@+id/latency_location"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/latency_result"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:id="@+id/packetloss_archive_panel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/black_alpha"
                    android:paddingRight="10dp" >

                    <TableRow
                        android:id="@+id/TableRow01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/flecha" />

                        <TextView
                            android:id="@+id/TextView16"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="@string/p_loss"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="18sp"
                            android:width="130dp" />

                        <TextView
                            android:id="@+id/packetloss_location"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/packetloss_result"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:id="@+id/jitter_archive_panel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#dddddd"
                    android:paddingRight="10dp" >

                    <TableRow
                        android:id="@+id/TableRow02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/flecha" />

                        <TextView
                            android:id="@+id/TextView18"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="@string/jitter_ms"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="18sp"
                            android:width="130dp" />

                        <TextView
                            android:id="@+id/jitter_location"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/jitter_result"
                            style="@style/column"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
